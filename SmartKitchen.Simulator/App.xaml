<Application x:Class="Hsr.CloudSolutions.SmartKitchen.Simulator.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:Hsr.CloudSolutions.SmartKitchen.UI.Controls;assembly=SmartKitchen.UI"
             Startup="App_OnStartup"
             Exit="App_OnExit"
             DispatcherUnhandledException="App_OnDispatcherUnhandledException">
    <Application.Resources>
        <Style x:Key="DeviceHeader" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Snow"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="18"/>
        </Style>
        
        <Style x:Key="Label" TargetType="controls:LabeldControl">
            <Setter Property="Foreground" Value="Snow"/>
        </Style>
          
         <Style x:Key="Symbol" TargetType="TextBlock">
             <Setter Property="FontFamily" Value="Segoe UI Symbol"/>
             <Setter Property="FontSize" Value="24"/>
             <Setter Property="Margin" Value="5"/>
         </Style>
    </Application.Resources>
</Application>
