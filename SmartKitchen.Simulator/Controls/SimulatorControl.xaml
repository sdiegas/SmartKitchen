<UserControl x:Class="Hsr.CloudSolutions.SmartKitchen.Simulator.Controls.SimulatorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hsr.CloudSolutions.SmartKitchen.Simulator.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             x:Name="This">
    <Grid x:Name="BackgroundGrid" Background="Black">
        <Image x:Name="BackgroundImage" Source="{Binding Path=SimulatorBackground, Mode=OneWay, ElementName=This}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
        <Canvas x:Name="SimArea" />
    </Grid>
</UserControl>
